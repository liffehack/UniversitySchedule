<Window x:Class="UniversitySchedule.PagesDatabase.AddSubgroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversitySchedule.PagesDatabase"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Добавить подгруппу"  Height="400" Width="350" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <materialDesign:ColorZone Mode="PrimaryMid" Grid.Row="0" VerticalAlignment="Stretch">
            <TextBlock Text="Подгруппа" VerticalAlignment="Center" Margin="20" FontSize="30" />
        </materialDesign:ColorZone>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Vertical" Margin="10">
                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Название подгруппы: "/>
                    <TextBox x:Name="x_name_subgroup" Foreground="Black" Margin="10, -2" materialDesign:HintAssist.Hint="Подгруппа" />
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="40" VerticalAlignment="Bottom" HorizontalAlignment="Center" >
                <Button x:Name="btnadd_subgroup" Width="100" Height="30" Content="Сохранить" Margin="10" Click="Btnadd_subgroup_Click"/>
                <Button x:Name="btncancel_subgroup" Width="100" Height="30" Content="Отмена" Margin="10" Click="Btncancel_subgroup_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>